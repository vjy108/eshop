<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/toolbar"
        android:id="@+id/toolbar_myaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/toolbar"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/my_account_profile_pic"
                    android:layout_marginTop="10sp"
                    android:src="@mipmap/user_icon"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

                <TextView
                    android:id="@+id/name_my_account"
                    android:textSize="25dp"
                    android:textAllCaps="true"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="15sp"
                    android:layout_gravity="center"
                    android:text="Name"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/my_account_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:id="@+id/tv_myaccount_mobile_number"
                    android:layout_gravity="center"
                    android:textColor="@color/my_account_color"
                    android:textSize="15dp"
                    android:text="Mobile Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_myaccount_email_address"
                    android:layout_gravity="center"
                    android:textColor="@color/my_account_color"
                    android:textSize="15dp"
                    android:text="Email Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/IV_myaccount_edit"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_editor"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_heading_cardview"
                        android:text="Prime Membership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:maxLines="2"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="#C5C1C1"
                        android:text="Get Extra benefits on Product Purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#C5C1C1" />

                    <TextView
                        android:id="@+id/tv_myaccount_prime_membership"
                        android:textAllCaps="true"
                        android:gravity="right"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_link_cardview"
                        android:text="View your membership"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_heading_cardview"
                        android:text="My Orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#C5C1C1" />

                    <TextView
                        android:id="@+id/tv_my_account_myorder"
                        android:textAllCaps="true"
                        android:gravity="right"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_link_cardview"
                        android:text="View All Orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_heading_cardview"
                        android:text="My Address (default)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:maxLines="5"
                        android:id="@+id/tv_default_address_my_account"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="#C5C1C1"
                        android:text="Home number 00 , Cannot Place New Delhi XXXX India"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#C5C1C1" />

                    <TextView
                        android:id="@+id/tv_myaccount_myaddress"
                        android:textAllCaps="true"
                        android:gravity="right"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_link_cardview"
                        android:text="View All Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_heading_cardview"
                        android:text="Business Account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#C5C1C1" />

                    <TextView
                        android:clickable="false"
                        android:visibility="invisible"
                        android:id="@+id/tv_myaccount_business_account"
                        android:textAllCaps="true"
                        android:gravity="right"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_link_cardview"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_heading_cardview"
                        android:text="Change Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#C5C1C1" />

                    <TextView
                        android:id="@+id/tv_myaccount_change_password"
                        android:textAllCaps="true"
                        android:gravity="right"
                        android:textSize="@dimen/Heading_cardview"
                        android:textColor="@color/Text_color_link_cardview"
                        android:text="Click here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>




    </androidx.core.widget.NestedScrollView>




</LinearLayout>