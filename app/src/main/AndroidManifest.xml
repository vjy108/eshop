<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eshop.project">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shopping_cart_"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_shopping_cart_"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TransactionActivity" />
        <activity android:name=".Payment_final_Activity" />
        <activity android:name=".Pre_payment_Activity" />
        <activity android:name=".Individual_product_view_Activity" />
        <activity android:name=".ApplyForBusinessAccActivity" />
        <activity android:name=".AddNewProductActivity" />
        <activity android:name=".About_developereAcitvity" />
        <activity android:name=".ChecksumActivity" />
        <activity android:name=".UpdateUserDetails" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".AddnewAddressActivity" />
        <activity android:name=".MyaddressActivity" />
        <activity android:name=".MyAccount" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".CartListActivity" />
        <activity android:name=".Preorder_confirmation_cartitems" />
        <activity android:name=".OrderConfirmation" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:theme="@style/FullScreen" />
        <activity
            android:name=".login"
            android:theme="@style/FullScreen" />
    </application>

</manifest>